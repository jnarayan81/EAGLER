CXX=g++
SRC=../src

CXXFLAGS+=-std=c++11
CXXFLAGS+=-I../vendor/seqan/include
CXXFLAGS+=-I../lib
CXXFLAGS+=-W -Wall -Wno-long-long -pedantic -Wno-variadic-macros
LDFLAGS=

UNAME_S := $(shell uname -s)

ifeq ($(UNAME_S),Linux)
	LDFLAGS+=-lrt
endif
ifeq ($(UNAME_S),Darwin)
	CXX=g++-4.9
endif

default: all
all: main

main: main.o
	$(CXX) $(LDFLAGS) -o main main.o

main.o: $(SRC)/main.cpp
	$(CXX) $(CXXFLAGS) -c -o main.o $(SRC)/main.cpp

clean:
	rm -f main.o main

.PHONY: default all clean